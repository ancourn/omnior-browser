{
  "name": "omnior-browser",
  "version": "1.0.0",
  "description": "The world's most advanced web browser",
  "main": "dist/browser/main/index.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "build": "next build && tsc",
    "dev": "next dev",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "electron-dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "browser",
    "web",
    "electron",
    "react",
    "privacy",
    "security",
    "fast"
  ],
  "author": "Omnior Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next": "^14.0.0",
    "@tanstack/react-query": "^5.0.0",
    "zustand": "^4.4.0",
    "next-themes": "^0.2.0",
    "lucide-react": "^0.292.0",
    "uuid": "^9.0.0",
    "@types/uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.omnior.browser",
    "productName": "Omnior Browser",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    }
  }
}